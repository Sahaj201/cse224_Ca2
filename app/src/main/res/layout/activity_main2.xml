<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff24"
    tools:context=".MainActivity2">
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets Get Started"
        android:textSize="30dp"
        android:textColor="#ff0000"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="30dp"/>
    <View
        android:layout_width="305dp"
        android:layout_height="5dp"
        android:background="#E91E63"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/et3"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/imgborder"
        android:hint="        Name"
        android:textAlignment="center"
        android:inputType="text"
        android:textColor="#ff0000"
        android:textColorHint="#ff0000" />
    <EditText
        android:id="@+id/et4"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@+id/et3"
        android:layout_marginTop="20dp"
        android:hint="        Email"
        android:layout_marginLeft="10dp"
        android:textColor="#ff0000"
        android:textColorHint="#ff0000"
        android:background="@drawable/imgborder"/>

    <EditText
        android:id="@+id/et5"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et4"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/imgborder"
        android:hint="        Phone no"
        android:inputType="phone"
        android:textColor="#ff0000"
        android:textColorHint="#ff0000" />

    <EditText
        android:id="@+id/et6"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/imgborder"
        android:hint="        Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:textColorHint="#ff0000" />
    <EditText
        android:id="@+id/et7"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:layout_below="@+id/et6"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:hint="        Confirm Password"
        android:layout_marginLeft="10dp"
        android:textColor="#ff0000"
        android:textColorHint="#ff0000"
        android:background="@drawable/imgborder"/>

    <RadioGroup
        android:id="@+id/rd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et7"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#01ADC4"
            android:text="Male"
            android:textColor="#ff0000"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:buttonTint="#01ADC4"
            android:text="Female"
            android:textColor="#ff0000"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:buttonTint="#01ADC4"
            android:text="Others"
            android:textColor="#ff0000"
            android:textSize="20dp" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rd1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="I agree with terms and conditions"
        android:textColor="#ff0000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border"
        android:text="Done"
        android:textColor="#ff0000" />




</RelativeLayout>